                <p class="item_in_cart_info">$1799,99.-</p>
            </article>
        </section>

        <div class="item_in_cart_cant">
            <div class="item__cart_cant">
                <div class="item__input quantity" id="quantity">1</div>
                <div class="add_sub_btn">
                    <button id="add" class=" add item__quantity" type="button">+</button>
                    <button id="subtract" class="remove item__quantity" type="button">-</button>
                </div>
            </div>
        </div>

        <div class="totalprice-by-item">
